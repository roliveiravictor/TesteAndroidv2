<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Login.TextView" parent="AppTheme">
        <item name="android:shadowColor">@color/gray_second_scale</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/textview_rounded</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Login.Button" parent="AppTheme">
        <item name="android:shadowColor">@color/gray_second_scale</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
